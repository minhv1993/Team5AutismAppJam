<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quickmatch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.quickmatch.Home"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.quickmatch.ProfileScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_profile_screen"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.quickmatch.WorldScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_world_screen"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.quickmatch.LevelScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_level_screen"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.quickmatch.GameLayoutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_layout"
            android:screenOrientation="landscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>